{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@assets/*": ["app/assets/*"],
      "@images/*": ["app/assets/images/*"],
      "@components/*": ["app/components/*"],
      "@constants/*": ["app/constants/*"],
      "@styles/*": ["app/styles/*"],
      "@screens/*": ["app/screens/*"],
      "@routes": ["app/routes"],
      "@routes/*": ["app/routes/*"],
      "@theme/*": ["app/theme/*"],
      "@types/*": ["app/types/*"],
      "@devtools/*": ["app/devtools/*"],
      "@stores/*": ["app/stores/*"],
      "@locales": ["app/locales"],
      "@locales/*": ["app/locales/*"],
      "@utils/*": ["app/utils/*"],
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}
